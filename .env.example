# --- сеть/порты ---
ROUTER_PORT=8000

# --- доступ к OpenAI / Router upstream ---
# обязательный ключ к провайдеру на который роутер будет проксировать
OPENAI_API_KEY=sk-***

# базовый upstream; по умолчанию — стандартный OpenAI
# если необходимо, можно указывать другой провайдер/шлюз
UPSTREAM_BASE_URL=https://api.openai.com/v1

# --- поведение роутера ---
# дефолтная модель на случай, если клиент не указал явно
DEFAULT_MODEL=gpt-4.1-mini

# лимиты/таймауты (примерные, если роутер их поддерживает)
REQUEST_TIMEOUT_SEC=120
MAX_TOKENS_DEFAULT=1024

# логирование
LOG_LEVEL=info

# CORS (если роутер нужен из браузера)
CORS_ENABLED=false
CORS_ALLOWED_ORIGINS=*

# (опционально) IP-allowlist или basic-auth, если реализовано в роутере
ENABLE_BASIC_AUTH=false
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=change_me
